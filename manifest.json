{
  "manifest_version": 3,
  "name": "youtube-improver",
  "version": "1.0",
  "description": "Improves youtube by removing shorts from your subscription page",
  "content_scripts": [
    {
      "js": ["scripts/HideShorts.js"],
      "matches": ["https://www.youtube.com/feed/subscriptions"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}